# 微博账号信息相关配置
[weibo]
app_key = "你的appkey"
app_secret = "你的appsecret"
redirect_uri = "你的回调uri"
username = "微博登录账号"
passwd = "微博密码"
security_domain = "你设置的安全域名"

test_username = "单元测试用的微博账号"
test_passwd = "测试账号的密码"

# 定时任务相关配置
[cron]
location = "Asia/Shanghai"  # 定时任务时区配置
toll_job = "@hourly"  # 报时任务定时执行时间配置 格式参考https://pkg.go.dev/github.com/robfig/cron?tab=doc

# 微博钟楼相关配置
[weiboclock]
pic_plan = "local"  # 指定微博图片方案
# local:使用 pic_path 指定的目录中的png图片（图片以整点数为名）,图片不能大于5M
# time:动态生成当前时间图片
# online:在线获取图片,获取失败时使用time方案
pic_path = "./pictures/weibo"  # local方案时指定图片目录路径
